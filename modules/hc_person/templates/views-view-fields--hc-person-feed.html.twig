{#
/**
* @file
* Theme override for feed of people.
*
* @see template_preprocess_views_view_fields()
*/
#}

<div class="silc-grid__col silc-grid__col--4-medium">
	<a href="{{ path('entity.node.canonical', {'node': fields.nid.content|render|striptags|trim}) }}" class="news-and-events__block">
		{% if fields.field_media_image.content|render %}
			<div class="news-and-events__img" style="background-image:url('{{ fields.field_media_image.content|render|striptags|trim }}')"></div>
		{% endif %}
		<div class="news-and-events__desc">
			<h3 class="news-and-events__title header--h3-small">{{ fields.title.content }}</h3>
			{% if fields.field_hc_person_title.content %}
				<p class="body-text--small">
					<strong>Title:</strong>
					{{ fields.field_hc_person_title.content }}
				</p>
			{% endif %}
			{% if fields.field_hc_person_organization.content %}
				<p class="body-text--small">
					<strong>Organization:</strong>
					{{ fields.field_hc_person_organization.content }}
				</p>
			{% endif %}
			{% if fields.field_hc_person_category.content %}
				<p class="body-text--small">
					<strong>Category:</strong>
					{{ fields.field_hc_person_category.content }}
				</p>
			{% endif %}
		</div>
	</a>
</div>
